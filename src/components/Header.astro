---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav class="header-nav">
    <!-- Site Title -->
    <h2 class="site-title">
      <a href="/">
        davdao<span class="cursor"></span>
      </a>
    </h2>

    <!-- Internal Links -->
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>

    <!-- Social Links -->
    <div class="social-links">
      <a href="  " target="_blank" rel="noopener noreferrer" aria-label="Follow David A on X">
        <iconify-icon icon="simple-icons:x" width="24"height="24"></iconify-icon>
      </a>
      <a href="https://github.com/glaciergh0st" target="_blank" rel="noopener noreferrer" aria-label="Go to David.A Github">
        <iconify-icon icon="mdi:github" width="24" height="24"></iconify-icon>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1rem 1rem;
  }

  .header-nav {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    gap: 1rem;
  }

  .site-title a {
    font-size: 1.75rem;
    font-weight: bold;
    color: black;
    text-decoration: none;
  }

  .site-title a:hover {
    text-decoration: underline;
  }

  .cursor {
    display: inline-block;
    width: 0.8ch;
    height: 1em;
    margin-left: 4px;
    background-color: black;
    animation: blink 1s steps(2, start) infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }

  .internal-links,
  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  .internal-links a,
  .social-links a {
    font-size: 1rem;
    color: black;
    text-decoration: none;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .internal-links a:hover,
  .social-links a:hover {
    transform: scale(1.05);
    color: #1e40af;
  }

  .social-links iconify-icon {
    transition: transform 0.3s ease;
  }

  .social-links a:hover iconify-icon {
    transform: scale(1.2);
    color: #1e40af;
  }

  @media (max-width: 640px) {
  .header-nav {
    flex-direction: column;
    align-items: flex-start;
  }

  .internal-links {
    margin-bottom: 0.5rem;
  }

  .social-links {
    margin-bottom: 0.5rem;
  }

  .site-title {
    margin-bottom: 0.5rem;
  }
}


  .sr-only {
    position: absolute;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
    white-space: nowrap;
  }
</style>

