---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav class="header-nav">
    <!-- Logo -->
    <h2 class="site-title">
      <a href="/">
        davdao<span class="cursor"></span>
      </a>
    </h2>

    <!-- Hamburger Button (mobile only) -->
    <button class="hamburger" id="hamburgerBtn" aria-label="Toggle navigation">
      â˜°
    </button>

    <!-- Collapsible Nav -->
    <div class="nav-wrapper" id="navMenu">
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/contact">Contact</HeaderLink>
      </div>

      <div class="social-links">
        <a href=" " target="_blank" rel="noopener noreferrer" aria-label="Follow on X">
          <iconify-icon icon="simple-icons:x" width="24" height="24"></iconify-icon>
        </a>
        <a href="https://github.com/glaciergh0st" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <iconify-icon icon="mdi:github" width="24" height="24"></iconify-icon>
        </a>
      </div>
    </div>
  </nav>

  <script type="text/javascript">
    if (typeof window !== "undefined") {
      document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("hamburgerBtn");
        const nav = document.getElementById("navMenu");
        btn.addEventListener("click", () => {
          nav.classList.toggle("open");
        });
      });
    }
  </script>
</header>

<style>
  header {
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 1rem 1rem;
  }

  .header-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  .site-title a {
    font-size: 1.75rem;
    font-weight: bold;
    color: black;
    text-decoration: none;
  }

  .cursor {
    display: inline-block;
    width: 0.8ch;
    height: .23em;
    margin-left: 4px;
    background-color: black;
    animation: blink 1s steps(2, start) infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }

  .hamburger {
    display: none;
    font-size: 1.8rem;
    background: none;
    border: none;
    cursor: pointer;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .internal-links,
  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .internal-links a,
  .social-links a {
    font-size: 1rem;
    color: black;
    text-decoration: none;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .internal-links a:hover,
  .social-links a:hover {
    transform: scale(1.05);
    color: #1e40af;
  }

  .social-links iconify-icon {
    transition: transform 0.3s ease;
  }

  .social-links a:hover iconify-icon {
    transform: scale(1.2);
    color: #1e40af;
  }

  @media (max-width: 640px) {
    .hamburger {
      display: block;
    }

    .nav-wrapper {
      display: none;
      flex-direction: column;
      align-items: flex-end;
      width: 100%;
      padding-top: 0.5rem;
      text-align: right;
      gap: 1rem;
    }

    .nav-wrapper.open {
      display: flex;
    }

    .internal-links,
    .social-links {
      flex-direction: column;
      align-items: flex-end;
      width: 100%;
    }
  }
</style>
