---
// BlogCard.astro
import { Image } from 'astro:assets';
const { href, title, pubDate, description, image } = Astro.props;
---

<article class="blog-card">
  <a href={href} class="blog-card-link">
    {image && (
     <Image
  src={img}
  alt={title}
  class="blog-card-image"
  width={600}
  height={300}
/>

    )}
    <div class="blog-card-body">
      <h2 class="blog-card-title">{title}</h2>
      <time class="blog-card-date">{new Date(pubDate).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      })}</time>
      <p class="blog-card-description">{description}</p>
    </div>
  </a>
</article>
